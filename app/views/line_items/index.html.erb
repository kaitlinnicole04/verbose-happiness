<p id="notice"><%= notice %></p>


<div class="panel panel-warning">
  
<div class="panel-heading"><h1>Line Items</h1></div>

<div class="panel-body" style= "background-color: ivory;">

<div class="table-responsive">
  <table class="table table-striped table-boredered table-hover table-condensed" style="background-color:seashell;border-style:solid; border-color: black; border-width:3px;">
    <thead>
      <tr>
        <th>Product</th>
        <th>Cart</th>
        <th colspan="3"></th>
      </tr>
    </thead>

   <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.title %></td>
        <td><%= line_item.cart.id %></td>
        <td><%= link_to 'Show', line_item , class:"btn btn-xs btn-info" %>
        <%= link_to 'Edit', edit_line_item_path(line_item) , class:"btn btn-xs btn-warning" %>
        <%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Line Item', new_line_item_path , class:"btn btn-xs btn-success" %>
</div>
</div>