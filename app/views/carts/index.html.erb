<p id="notice"><%= notice %></p>


<div class="panel panel-primary">
  
<div class="panel-heading"><h1>Carts</h1></div>

<div class="panel-body" style= "background-color: ivory;">

<div class="table-responsive">
<table class="table table-striped lable-bordered table-hover table-condensed" style="background-color:seashell;border-style:solid; border-color: black; border-width:3px;">
  <thead>
    <tr>
      <th>Cart ID</th>
      <th>ID Session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.id %></td>
        <td><%= session.id %></td>
        <td><%= link_to 'Show', cart , class:"btn btn-xs btn-info" %>
            <%= link_to 'Edit', edit_cart_path(cart) , class:"btn btn-xs btn-warning" %>
            <%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Cart', new_cart_path , class:"btn btn-xs btn-success" %>
</div>
</div>